@model AspNetCore1.Models.Carro
@{
    ViewData["Title"] = "Update";
}

<h2>Update</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">

            <input asp-for="Id" type="hidden"/>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" type="text" name="Nome" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" type="text" name="Marca" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" type="number" name="Ano" class="form-control" />
            </div>

            <input type="submit" value="Salvar" class="btn" />
        </form>
    </div>
</div>

<a asp-action="Index" class="btn btn-link" >Voltar</a>
