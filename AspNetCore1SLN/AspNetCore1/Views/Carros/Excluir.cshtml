@model AspNetCore1.Models.Carro

@{
    ViewData["Title"] = "Excluir";
}

<h2>Excluir</h2>

<div class="container">
    <div class="row">
        @Html.DisplayFor(x => x.Nome)
        @Html.DisplayFor(x => x.Marca)
        @Html.DisplayFor(x => x.Ano)
    </div>


    <form action="Excluir" method="post">
        <input asp-for="Id" type="hidden" />
        <input asp-for="Nome" type="hidden" />
        <input asp-for="Marca" type="hidden" />
        <input asp-for="Ano" type="hidden" />

        <input type="submit" class="btn btn-danger" />

    </form>
    <a asp-action="Index">Cancelar</a>

</div>