@model IList<PesquisaCrypto.Models.Moedas>

<h4>Em qual moeda você investe?</h4>

<hr />

<div class="container">
    <form asp-controller="Moedas" asp-action="EscolhaMoedas" method="post" class="form-group">
        @{
            for (int i = 0; i < Model.Count(); i++)
            {
                <div class="row form-group">
                    <input asp-for="@Model[i].CheckBoxMarcado" type="checkbox" />
                    <label asp-for="@Model[i].ID">@Model[i].Nome</label>
                    <input asp-for="@Model[i].ID" type="hidden" />
                    <input asp-for="@Model[i].Nome" type="hidden" />
                </div>
            }
        }
        <input type="submit" name="Submit" value="Registrar" class="btn btn-info" />
    </form>



</div>