@model App3.Models.Tarefas

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="container">
    <div>
        <form asp-action="Create" method="post">


            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Nome">Nome:</label>
                    <input asp-for="Nome" type="text" name="Nome" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Descricao">Descrição:</label>
                    <textarea asp-for="Descricao" name="Descricao" class="form-control"></textarea>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Inicio">Inicio:</label>
                    <input asp-for="Inicio" type="datetime-local" name="Inicio" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Fim">Fim:</label>
                    <input asp-for="Fim" type="datetime-local" name="Fim" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Importancia">Importancia:</label>
                    <input asp-for="Importancia" type="text" name="Importancia" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <input type="submit" name="Submit" value="Salvar Tarefa" class="btn"/>
                </div>
            </div>
        </form>
    </div>
    <div>
        <a asp-controller="Tarefas" asp-action="Index" class="btn btn-info">Página Inicial</a>
    </div>
</div>
